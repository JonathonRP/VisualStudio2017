<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFdataGrid"
             x:Class="WPFdataGrid.DataGridControl"
             Height="400" Width="600">
    <Grid Loaded="Grid_Loaded">
        <DataGrid x:Name="dataGrid" HorizontalAlignment="Left" Height="380" VerticalAlignment="Top" Width="580" Margin="10,10,0,0" MouseUp="dataGrid_MouseUp" CanUserDeleteRows="False" RowDetailsVisibilityMode="Collapsed"/>
    </Grid>
</UserControl>
